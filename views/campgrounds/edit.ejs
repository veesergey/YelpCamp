<%- include('../partials/header.ejs')%>

<div class="container">
    <div class="row">
        <h2 style="text-align: center;">Edit '<%=campground.name%>'</h2>
        <div class="formDiv">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Campground Name</label>
                    <input class="form-control" type="text" name="campground[name]" value="<%=campground.name%>">
                </div>
                <div class="form-group">
                    <label>Campground Cost Per Night</label>
                    <input class="form-control" type="number" name="campground[price]" min="0.01" step="0.01" value="<%=campground.price%>">
                </div>
                <div class="form-group">
                    <label>Campground Image URL</label>
                    <input class="form-control" name="campground[image]" type="text" value="<%=campground.image%>">
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <input class="form-control" name="campground[description]" type="text" value="<%=campground.description%>">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-block btn-primary" type="submit" value="Submit">
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>



<%- include('../partials/footer.ejs')%>