<%- include('../partials/header.ejs')%>

<div class="container">
    <div class="row">
        <h2 style="text-align: center;">Add New Comment to <%=campground.name%></h2>
        <div style="width:30%; margin: 25px auto;">
            <form action="/campgrounds/<%=campground._id%>/comments" method="post">
                <div class="form-group">
                    <label>Text</label>
                    <input class="form-control" name="comment[text]" type="text">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-block btn-primary" type="submit" value="Submit">
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>



