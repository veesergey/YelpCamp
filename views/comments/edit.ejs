<%- include('../partials/header.ejs')%>

<div class="container">
    <div class="row">
        <h2 style="text-align: center;">Edit Comment %></h2>
        <div class="formDiv">
            <form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id%>?_method=PUT" method="post">
                <div class="form-group">
                    <label>Text</label>
                    <input class="form-control" name="comment[text]" type="text" value="<%=comment.text%>">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-block btn-primary" type="submit" value="Submit">
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>



