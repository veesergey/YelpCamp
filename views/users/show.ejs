<%- include('../partials/header.ejs')%>

<div class="container">
    <div class="row">
        <h2 style="text-align: center;">Profile of <%=user.username%></h2>
        <div class="formDiv">
            <form action="/profile/<%=user.id%>?_method=PUT" method="post">
                <div class="form-group">
                    <label for="password">Password</label>
                    <input class="form-control" type="password" name="user[password]" id="password" value="<%=user.password%>">
                </div>
                <div class="form-group">
                    <label for="avatar">Avatar</label>
                    <img src="<%=user.avatar%>" class="avatar">
                    <input class="form-control" type="text" name="user[avatar]" id="avatar" value="<%=user.avatar%>">
                </div>
                <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input class="form-control" type="text" name="user[firstName]" id="firstName" value="<%=user.firstName%>">
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input class="form-control" type="text" name="user[lastName]" id="lastName" value="<%=user.lastName%>">
                </div>
                <div class="form-group">
                    <label for="adminCode">Admin Code</label>
                    <input class="form-control" type="text" name="user[adminCode]" id="adminCode">
                </div>
                <input type="submit" value="Update" class="btn btn-primary btn-lg btn-block">
            </form>
        </div>
    </div>
</div>




<%- include('../partials/footer.ejs')%>